<main class="landing forms">
      <div class="container register"> 
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', class: "form-control register__input" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'password', class: "form-control register__input" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Sign in", class: "btn btn-default my-2" %>
        </div>        
      <% end %>
      </div>
      <div class="new_user__img-container">
        <%= image_tag('sign_in_page.svg', :class => "new_user__img", alt: "SVG image") %>
      </div>
  </main>
